{
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": ["source.organizeImports"],
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "files.exclude": {
    ".ruff_cache": true,
    ".pytest_cache": true,
    ".coverage": true,
    "htmlcov": true,
    "dist": true
  },
}
